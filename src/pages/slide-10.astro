---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Product Roadmap - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					Product Roadmap
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-purple-400 mb-8">
					Strategic development timeline and feature evolution
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: Roadmap Phases -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-3 gap-8">
				<!-- Phase 1 -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Phase 1: Foundation</h3>
					<!-- Add Phase 1 roadmap here -->
				</div>

				<!-- Phase 2 -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Phase 2: Scale</h3>
					<!-- Add Phase 2 roadmap here -->
				</div>

				<!-- Phase 3 -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Phase 3: Expansion</h3>
					<!-- Add Phase 3 roadmap here -->
				</div>
			</div>
		</GridRow>

		<!-- Row 3: Timeline -->
		<GridRow client:load>
			<div class="card p-6 bg-black/40 border border-gray-800">
				<h3 class="text-2xl font-bold text-white mb-6">Development Timeline</h3>
				<!-- Add detailed timeline here -->
			</div>
		</GridRow>
	</GridLayout>
</Layout> 