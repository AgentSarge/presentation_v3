---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Team - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					Our Team
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-purple-400 mb-8">
					Experienced founders building the future of field sales
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: Founding Team -->
		<GridRow client:load>
			<div class="space-y-8">
				<h3 class="text-2xl font-bold text-white text-center">Founding Team</h3>
				<div class="grid lg:grid-cols-2 gap-8">
					<!-- Founder 1 -->
					<div class="card p-6 bg-black/40 border border-gray-800">
						<h4 class="text-xl font-bold text-white mb-2">Founder Name</h4>
						<p class="text-purple-400 mb-4">Title & Role</p>
						<!-- Add founder details here -->
					</div>

					<!-- Founder 2 -->
					<div class="card p-6 bg-black/40 border border-gray-800">
						<h4 class="text-xl font-bold text-white mb-2">Founder Name</h4>
						<p class="text-purple-400 mb-4">Title & Role</p>
						<!-- Add founder details here -->
					</div>
				</div>
			</div>
		</GridRow>

		<!-- Row 3: Advisors & Key Hires -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-2 gap-8">
				<!-- Advisors -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Key Advisors</h3>
					<!-- Add advisors here -->
				</div>

				<!-- Key Hires -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Key Hires</h3>
					<!-- Add key hires here -->
				</div>
			</div>
		</GridRow>
	</GridLayout>
</Layout> 