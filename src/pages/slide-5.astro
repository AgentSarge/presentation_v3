---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Smart Badge for Field Sales - SelfTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Header -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<p class="text-sm text-text-muted mb-4">We've built a</p>
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					Smart Badge for Field Sales
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-blue-400 mb-8">
					That Never Misses a Conversation
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: Main Content Grid -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-3 gap-8 items-start">
				<!-- Left Column -->
				<div>
					<!-- The Blind Spot -->
					<div class="card p-6 bg-black/40 border border-gray-800 mb-12">
						<h3 class="text-xl font-bold text-white mb-4">The Blind Spot</h3>
						<p class="text-text-muted leading-relaxed mb-4">
							Millions of field reps knock doors—<span class="text-pink-400 font-medium">completely invisible to sales leaders</span>. Coaching is impossible, and best practices never scale.
						</p>
						<div class="mt-6">
							<h4 class="text-blue-400 font-semibold mb-3">Wear. Walk. Win.</h4>
							<p class="text-text-muted leading-relaxed">
								<span class="text-blue-400">Simply wear the badge</span>—no app, no phone, no distractions. Every conversation is auto-recorded and transcribed, with objections and signals tagged automatically. <span class="text-green-400 font-medium">Offline-first</span>.
							</p>
						</div>
				</div>
				
					<!-- Live Insight -->
					<div class="card p-6 bg-black/40 border border-gray-800">
						<h3 class="text-xl font-bold text-white mb-4">Live Insight. No Shadowing.</h3>
						<p class="text-text-muted leading-relaxed">
							<span class="text-blue-400 font-medium">Instant access</span> to real field conversations. Spot missed follow-ups and coachable moments—<span class="text-green-400 font-medium">AI flags risks</span> in one dashboard.
						</p>
					</div>
				</div>
				
				<!-- Center Column: Badge -->
				<div class="flex justify-center items-center">
					<div class="relative">
						<div class="card p-8 bg-gradient-to-br from-blue-400/10 to-purple-400/10 border-2 border-blue-400/30">
							<img src="/badge.png" alt="Smart Badge" class="w-full max-w-sm mx-auto" />
						</div>
						
					</div>
				</div>

				<!-- Right Column -->
				<div class="space-y-8">
					<!-- Offline Ready -->
					<div class="card p-6 bg-black/40 border border-gray-800">
						<div class="flex items-center gap-3 mb-4">
							<div class="w-3 h-3 bg-green-400 rounded-full"></div>
							<h3 class="text-xl font-bold text-white">Offline Ready</h3>
			</div>
						<p class="text-text-muted leading-relaxed">
							Works without internet, syncs when connection is available
						</p>
					</div>
					
					<!-- Objection Memory Recall -->
					<div class="card p-6 bg-black/40 border border-gray-800">
						<div class="flex items-center gap-3 mb-4">
							<div class="w-3 h-3 bg-pink-400 rounded-full"></div>
							<h3 class="text-xl font-bold text-white">Objection Memory Recall</h3>
						</div>
						<p class="text-text-muted leading-relaxed">
							Instantly surfaces past objections and responses for coaching
						</p>
					</div>
				</div>
			</div>
		</GridRow>
	</GridLayout>
</Layout> 