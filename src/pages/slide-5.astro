---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import Slide5BadgePlain from '../components/Slide5BadgePlain';
---

<Layout title="Smart Badge for Field Sales - SelfTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Header -->
		<GridRow client:load>
			<div style="text-align: center; margin-bottom: 32px;">
				<p style="font-size: 14px; color: #fff; margin-bottom: 16px;">We've built a</p>
				<h1 style="font-size: 36px; font-weight: bold; margin-bottom: 24px; color: #fff;">Smart Badge for Field Sales</h1>
				<h2 style="font-size: 24px; font-weight: 500; color: #fff; margin-bottom: 32px;">That Never Misses a Conversation</h2>
			</div>
		</GridRow>

		<!-- Row 2: Main Content Grid -->
		<GridRow client:load>
			<Slide5BadgePlain client:load />
		</GridRow>
	</GridLayout>
</Layout> 