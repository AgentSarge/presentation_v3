---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import LayoutDemoHeroPlain from '../components/LayoutDemoHeroPlain';
import LayoutDemoCompaniesPlain from '../components/LayoutDemoCompaniesPlain';
import LayoutDemoStatsPlain from '../components/LayoutDemoStatsPlain';
---

<Layout title="Market Validation - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Clean Hero -->
		<GridRow client:load>
			<LayoutDemoHeroPlain client:load />
		</GridRow>

		<!-- Row 2: Simple Company Cards -->
		<GridRow client:load>
			<LayoutDemoCompaniesPlain client:load />
		</GridRow>

		<!-- Row 3: Simple Market Stats -->
		<GridRow client:load>
			<LayoutDemoStatsPlain client:load />
		</GridRow>
	</GridLayout>
</Layout> 