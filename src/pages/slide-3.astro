---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import Slide3ProblemPlain from '../components/Slide3ProblemPlain';
---

<Layout title="The Problem - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero -->
		<GridRow client:load>
			<div style="text-align: center;">
				<h1 style="font-size: 36px; font-weight: bold; margin-bottom: 32px; color: #fff;">The Problem</h1>
				<p style="font-size: 20px; color: #fff; max-width: 600px; margin: 0 auto 16px auto;">Why field sales is still a black box for most organizations.</p>
			</div>
		</GridRow>

		<!-- Row 2: Problem Content -->
		<GridRow client:load>
			<Slide3ProblemPlain client:load />
		</GridRow>
	</GridLayout>
</Layout> 