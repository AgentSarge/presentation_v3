---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Appendix - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					Appendix
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-gray-400 mb-8">
					Additional information and supporting data
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: Additional Information Grid -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-2 gap-8">
				<!-- Technical Details -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Technical Details</h3>
					<!-- Add technical architecture, security, compliance info here -->
				</div>

				<!-- Market Research -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Market Research</h3>
					<!-- Add detailed market research and studies here -->
				</div>

				<!-- Customer Case Studies -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Customer Case Studies</h3>
					<!-- Add detailed customer success stories here -->
				</div>

				<!-- Product Roadmap -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Product Roadmap</h3>
					<!-- Add detailed product development timeline here -->
				</div>
			</div>
		</GridRow>
	</GridLayout>
</Layout> 