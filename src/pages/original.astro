---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import MarketOpportunityHero from '../components/MarketOpportunityHero';
import FeatureCards from '../components/FeatureCards';
import InteractiveCounter from '../components/InteractiveCounter';
import TechStack from '../components/TechStack';
---

<Layout title="Our Market Wedge - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Market Opportunity Hero Section -->
		<GridRow client:load>
			<MarketOpportunityHero client:load />
		</GridRow>

		<!-- Row 2: Feature Cards (3-column grid) -->
		<GridRow client:load>
			<FeatureCards client:load />
		</GridRow>

		<!-- Row 3: Interactive Components (2-column grid) -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-2 gap-6 h-full">
				<div class="col-span-1">
					<InteractiveCounter client:load />
				</div>
				<div class="col-span-1">
					<TechStack client:load />
				</div>
			</div>
		</GridRow>
	</GridLayout>
</Layout> 