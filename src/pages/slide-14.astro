---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Go-to-Market Strategy - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					Go-to-Market Strategy
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-blue-400 mb-8">
					Strategic approach to market penetration
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: GTM Pillars -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-3 gap-8">
				<!-- Customer Acquisition -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Customer Acquisition</h3>
					<!-- Add customer acquisition strategy here -->
				</div>

				<!-- Sales Strategy -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Sales Strategy</h3>
					<!-- Add sales strategy here -->
				</div>

				<!-- Partnership Strategy -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Partnership Strategy</h3>
					<!-- Add partnership strategy here -->
				</div>
			</div>
		</GridRow>

		<!-- Row 3: Market Entry Timeline -->
		<GridRow client:load>
			<div class="card p-6 bg-black/40 border border-gray-800">
				<h3 class="text-2xl font-bold text-white mb-6">Market Entry Timeline</h3>
				<!-- Add timeline/roadmap here -->
			</div>
		</GridRow>
	</GridLayout>
</Layout> 