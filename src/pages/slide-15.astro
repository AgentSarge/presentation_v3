---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Funding Ask - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					The Ask
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-pink-400 mb-8">
					Join us in transforming field sales
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: Funding Details -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-2 gap-8">
				<!-- Funding Amount & Use -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-2xl font-bold text-white mb-4">Funding Request</h3>
					<!-- Add funding amount and use of funds here -->
				</div>

				<!-- Investor Benefits -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-2xl font-bold text-white mb-4">Why Invest Now</h3>
					<!-- Add investor benefits here -->
				</div>
			</div>
		</GridRow>

		<!-- Row 3: Contact & Next Steps -->
		<GridRow client:load>
			<div class="text-center">
				<div class="card p-8 bg-gradient-to-r from-pink-400/10 to-purple-400/10 border-2 border-pink-400/30">
					<h3 class="text-3xl font-bold text-white mb-6">Let's Connect</h3>
					<!-- Add contact information and next steps here -->
				</div>
			</div>
		</GridRow>
	</GridLayout>
</Layout> 