---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import PipelineTabsPlain from '../components/PipelineTabsPlain';
---

<Layout title="SelfTag Pipeline - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero -->
		<GridRow client:load>
			<div style="text-align: center; margin-bottom: 32px;">
				<h1 style="font-size: 36px; font-weight: bold; margin-bottom: 24px; color: #fff;">SelfTag Pipeline — How It Works</h1>
				<p style="font-size: 20px; color: #fff; max-width: 600px; margin: 0 auto;">From capture to coaching, every step is optimized for accuracy and speed.</p>
			</div>
		</GridRow>

		<!-- Row 2: Pipeline Tabs Interface -->
		<GridRow client:load>
			<div style="min-height: 600px;">
				<PipelineTabsPlain client:load />
			</div>
		</GridRow>

		<!-- Row 3: Why It Wins Quote -->
		<GridRow client:load>
			<div style="text-align: center; max-width: 800px; margin: 0 auto;">
				<blockquote style="font-size: 24px; font-style: italic; color: #fff; font-weight: 500;">
					"SalesTag delivers real pipeline visibility and actionable coaching — no distractions, no missed data."
				</blockquote>
			</div>
		</GridRow>
	</GridLayout>
</Layout> 