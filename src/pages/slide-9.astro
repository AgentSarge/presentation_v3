---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import Slide9BusinessModelPlain from '../components/Slide9BusinessModelPlain';
---

<Layout title="Business Model - SelfTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div style="text-align: center; margin-bottom: 32px;">
				<h1 style="font-size: 36px; font-weight: bold; margin-bottom: 24px; color: #fff;">Business Model</h1>
				<h2 style="font-size: 24px; font-weight: 500; color: #fff; margin-bottom: 24px;">High-margin SaaS powered by defensible hardware</h2>
				<p style="font-size: 20px; color: #fff; max-width: 600px; margin: 0 auto;">"Our wedge is hardware. Our revenue is software. Our moat is data."</p>
			</div>
		</GridRow>

		<!-- Row 2 & 3: Revenue Streams & The Model -->
		<GridRow client:load>
			<Slide9BusinessModelPlain client:load />
		</GridRow>
	</GridLayout>
</Layout> 