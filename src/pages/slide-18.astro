---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
---

<Layout title="Traction & Metrics - SalesTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center mb-8">
				<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 tracking-tight text-white">
					Traction & Metrics
				</h1>
				<h2 class="text-2xl lg:text-3xl xl:text-4xl font-medium text-green-400 mb-8">
					Proven market validation and growth
				</h2>
			</div>
		</GridRow>

		<!-- Row 2: Key Metrics Grid -->
		<GridRow client:load>
			<div class="grid lg:grid-cols-3 gap-8">
				<!-- Customer Metrics -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Customer Metrics</h3>
					<!-- Add customer metrics here -->
				</div>

				<!-- Product Metrics -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Product Metrics</h3>
					<!-- Add product metrics here -->
				</div>

				<!-- Business Metrics -->
				<div class="card p-6 bg-black/40 border border-gray-800">
					<h3 class="text-xl font-bold text-white mb-4">Business Metrics</h3>
					<!-- Add business metrics here -->
				</div>
			</div>
		</GridRow>

		<!-- Row 3: Growth Chart -->
		<GridRow client:load>
			<div class="card p-6 bg-black/40 border border-gray-800">
				<h3 class="text-2xl font-bold text-white mb-6">Growth Trajectory</h3>
				<!-- Add growth chart/visualization here -->
			</div>
		</GridRow>
	</GridLayout>
</Layout> 