---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import Slide8MarketTablePlain from '../components/Slide8MarketTablePlain';
import WhyMarketRipePlain from '../components/WhyMarketRipePlain';
---

<Layout title="Market Opportunity - SelfTag" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div style="text-align: center; margin-bottom: 32px;">
				<h1 style="font-size: 36px; font-weight: bold; margin-bottom: 24px; color: #fff;">Market Opportunity</h1>
				<h2 style="font-size: 24px; font-weight: 500; color: #fff; margin-bottom: 32px;">$134M TAM across 5 targeted industries</h2>
			</div>
		</GridRow>

		<!-- Row 2: Main Content -->
		<GridRow client:load>
			<Slide8MarketTablePlain client:load />
		</GridRow>

		<!-- Row 3: Why Market Is Ripe -->
		<GridRow client:load>
			<WhyMarketRipePlain client:load />
		</GridRow>
	</GridLayout>
</Layout> 