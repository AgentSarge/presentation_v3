---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import DashboardTabs from '../components/DashboardTabs';
---

<Layout title="SalesTag Dashboard - Coaching Intelligence" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div class="text-center">
				<h1 class="text-gradient text-4xl lg:text-5xl xl:text-6xl font-bold mb-8 tracking-tighter">
					SalesTag Dashboard
				</h1>
				<p class="text-xl lg:text-2xl text-text-muted max-w-4xl mx-auto">
					Intelligent coaching insights from every field conversation
				</p>
			</div>
		</GridRow>

		<!-- Row 2: Dashboard Tabs Interface -->
		<GridRow client:load>
			<div class="h-[700px]">
				<DashboardTabs client:load />
			</div>
		</GridRow>
	</GridLayout>
</Layout> 