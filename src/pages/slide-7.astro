---
import Layout from '../layouts/Layout.astro';
import GridLayout, { GridRow } from '../components/GridLayout';
import DashboardTabsPlain from '../components/DashboardTabsPlain';
---

<Layout title="SalesTag Dashboard - Coaching Intelligence" layout="wide" maxWidth="4xl">
	<GridLayout client:load>
		<!-- Row 1: Hero Section -->
		<GridRow client:load>
			<div style="text-align: center;">
				<h1 style="font-size: 36px; font-weight: bold; margin-bottom: 32px; color: #fff;">SalesTag Dashboard</h1>
				<p style="font-size: 20px; color: #fff; max-width: 600px; margin: 0 auto;">Intelligent coaching insights from every field conversation</p>
			</div>
		</GridRow>

		<!-- Row 2: Dashboard Tabs Interface -->
		<GridRow client:load>
			<div style="min-height: 700px;">
				<DashboardTabsPlain client:load />
			</div>
		</GridRow>
	</GridLayout>
</Layout> 