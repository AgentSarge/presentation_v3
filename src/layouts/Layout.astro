<style is:global>
  @import "../styles/global.css";
  
  /* Layout System - Fixed Viewport with Sidebar */
  
  /* Base body and html - no overflow */
  html, body {
    height: 100vh;
    overflow: hidden;
  }
  
  /* App Container - Full viewport with flex layout */
  .app-container {
    display: flex;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }
  
  /* Sidebar Styles */
  .sidebar {
    width: 280px;
    height: 100vh;
    background: var(--color-bg-secondary);
    border-right: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 40;
    flex-shrink: 0;
    overflow: hidden;
  }
  
  .sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-shrink: 0;
  }
  
  .sidebar-nav {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
  }
  
  .sidebar-nav::-webkit-scrollbar {
    width: 4px;
  }
  
  .sidebar-nav::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .sidebar-nav::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 2px;
  }
  
  .sidebar-nav::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-secondary);
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .logo-icon {
    font-size: 1.5rem;
  }
  
  .logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }
  

  
  .nav-section {
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .nav-section:last-child {
    border-bottom: none;
  }
  
  .nav-label {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }
  
  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .nav-item {
    margin-bottom: 0.125rem;
  }
  
  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all var(--transition-fast);
    position: relative;
  }
  
  .nav-button {
    width: 100%;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
  }
  
  .nav-link:hover {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-primary);
  }
  
  .nav-link.active {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text-primary);
  }
  
  .nav-link.active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 1.5rem;
    background: var(--color-text-primary);
    border-radius: 0 2px 2px 0;
  }
  
  .nav-icon {
    font-size: 1rem;
    flex-shrink: 0;
  }
  
  .nav-text {
    flex: 1;
  }
  
  .external-link {
    font-size: 0.75rem;
    opacity: 0.5;
  }
  
  .sidebar-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--color-border);
    flex-shrink: 0;
    background: var(--color-bg-secondary);
  }
  
  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .status-text {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
  
  /* Main Content Area */
  .main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  
  /* Adjust padding when sidebar is present */
  .main-content.with-sidebar.layout-constrained {
    padding: 2rem 3rem;
  }
  
  .main-content.with-sidebar.layout-wide {
    padding: 1.5rem 2rem;
  }
  
  .main-content.with-sidebar.layout-full {
    padding: 1rem;
  }
  
  /* Content Wrapper - Fills available space */
  .content-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  
  
  /* Mobile Styles - Hide sidebar on small screens */
  @media (max-width: 1023px) {
    .sidebar {
      display: none;
    }
    
    .main-content.with-sidebar {
      width: 100%;
    }
  }
  
  /* Desktop Styles */
  @media (min-width: 1024px) {
    .main-content.with-sidebar.layout-constrained {
      padding: 3rem 5rem;
    }
    .main-content.with-sidebar.layout-wide {
      padding: 2.5rem 4rem;
    }
    .main-content.with-sidebar.layout-full {
      padding: 2rem;
    }
  }
  
  @media (min-width: 1280px) {
    .main-content.with-sidebar.layout-constrained {
      padding: 3rem 6rem;
    }
    .main-content.with-sidebar.layout-wide {
      padding: 3rem 5rem;
    }
    .main-content.with-sidebar.layout-full {
      padding: 2.5rem;
    }
  }
  
  @media (min-width: 1536px) {
    .main-content.with-sidebar.layout-constrained {
      padding: 3rem 4rem;
    }
    .main-content.with-sidebar.layout-wide {
      padding: 2.5rem 3rem;
    }
    .main-content.with-sidebar.layout-full {
      padding: 2rem;
    }
  }
  
  /* Utility classes for viewport-based components */
  .viewport-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  
  .section-spacing {
    margin-bottom: 2rem;
    flex-shrink: 0;
  }
  
  .section-spacing:last-child {
    margin-bottom: 0;
  }
  
  /* Compact spacing for viewport layouts */
  .section-spacing-compact {
    margin-bottom: 1.5rem;
    flex-shrink: 0;
  }
  
  .section-spacing-compact:last-child {
    margin-bottom: 0;
  }
  
  /* Content blocks with reduced spacing */
  .content-block {
    margin-bottom: 1rem;
    flex-shrink: 0;
  }
  
  .content-block:last-child {
    margin-bottom: 0;
  }
  
  /* Scrollable section if needed within viewport */
  .scrollable-section {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
  }
  
  /* Hide scrollbars but keep functionality */
  .scrollable-section::-webkit-scrollbar {
    display: none;
  }
  
  .scrollable-section {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style> 